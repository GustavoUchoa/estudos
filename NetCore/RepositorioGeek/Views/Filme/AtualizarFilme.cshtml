@model Filme

<html>
    <head>
        <meta name="viewport" content="width=device-width">
        <title>Atualizar Filme</title>
    </head>

    <h2>Atualizar Filme</h2>
    <hr />
    
    <div class="row">
        <div class="col-md-4">
            <form asp-action="AtualizarFilme">
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="Concluido" /> @Html.DisplayNameFor(model => model.Concluido)
                        </label>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="DataConclusao" class="control-label"></label>
                    <input asp-for="DataConclusao" class="form-control" />
                    <span asp-validation-for="DataConclusao" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Classificacao" class="control-label"></label>
                    <input asp-for="Classificacao" class="form-control" />
                    <span asp-validation-for="Classificacao" class="text-danger"></span>
                </div>                    

                <div class="form-group">
                    <input type="submit" value="Atualizar" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Retornar</a>
    </div>
</html>